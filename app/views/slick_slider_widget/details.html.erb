<div class="details-view" data-scrivito-modal-size="large">
  <%= scrivito_details_for do %>
    <%= scrivito_tag :div, widget, :panels %>
  <% end %>

  <%= scrivito_details_for 'Slides' do %>
    <h5>Show on Desktop</h5>
    <%= scrivito_tag(:div, widget, :slides_to_show) %>
    <h5>Scroll</h5>
    <%= scrivito_tag(:div, widget, :slides_to_scroll) %>

    <h5>Show on Tablet</h5>
    <%= scrivito_tag(:div, widget, :slides_to_show_tablet) %>
    <h5>Show on Mobile</h5>
    <%= scrivito_tag(:div, widget, :slides_to_show_mobile) %>
  <% end %>

  <%= scrivito_details_for 'Infinite Scrolling' do %>
    <%= scrivito_toggle_button_editor(widget, :infinite) %>
  <% end %>

  <%= scrivito_details_for 'Show dots' do %>
    <%= scrivito_toggle_button_editor(widget, :dots) %>
  <% end %>

  <%= scrivito_details_for 'Autoplay' do %>
    <%= scrivito_toggle_button_editor(widget, :autoplay) %>
    <h5>Speed</h5>
    <%= scrivito_tag(:div, widget, :autoplay_speed) %>
  <% end %>
</div>
